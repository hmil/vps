server {
  listen 80;

  server_name files.hmil.fr;

  location / {
    return 302 https://files.hmil.fr;
  }

  location /.well-known {
    root /var/www/letsencrypt/files;
  }
}

server {
  listen 443 ssl;

  ssl_certificate   /etc/letsencrypt/live/files.hmil.fr/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/files.hmil.fr/privkey.pem;
  ssl_protocols   SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers   HIGH:!aNULL:!MD5;

  server_name files.hmil.fr;

  client_max_body_size 300M;

  location / {
    root ${DISK_ROOT}/files;
  }

  location /.well-known {
    root /var/www/letsencrypt/files;
  }
}
