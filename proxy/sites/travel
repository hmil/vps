server {
  listen 80;
  server_name travel.hmil.fr;

  location / {
    return 302 https://travel.hmil.fr${DOLLAR}request_uri;
  }
}

server {
  listen 443 ssl;

  ssl_certificate   /etc/letsencrypt/live/travel.hmil.fr/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/travel.hmil.fr/privkey.pem;
  ssl_protocols   SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers   HIGH:!aNULL:!MD5;

  server_name travel.hmil.fr;

  client_max_body_size 300M;

  location / {
    proxy_pass http://localhost:${PORT_TRAVEL}/;
    proxy_set_header Host ${DOLLAR}host;
    proxy_set_header X-Forwarded-Proto ${DOLLAR}scheme;
  }

  location /.well-known {
    root /var/www/letsencrypt/travel;
  }
}
